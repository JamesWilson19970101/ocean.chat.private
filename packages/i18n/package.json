{
  "name": "@ocean.chat/i18n",
  "packageManager": "yarn@4.7.0",
  "scripts": {
    "build": "yarn build:js && yarn build:copy",
    "build:js": "tsc -p tsconfig.json",
    "build:copy": "mkdir -p ./dist/locales && cp -r ./src/locales/* ./dist/locales",
    "prebuild": "rm -rf ./dist",
    "postbuild": "node ./dist/generator.js",
    "test": "jest",
    "dev": "ts-node src/index",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix"
  },
  "dependencies": {
    "i18next": "^24.2.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.10",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  }
}

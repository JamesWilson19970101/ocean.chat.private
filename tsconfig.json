{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@ocean.chat/i18n": ["libs/i18n/src"],
      "@ocean.chat/i18n/*": ["libs/i18n/src/*"],
      "@ocean.chat/logger": ["libs/logger/src"],
      "@ocean.chat/logger/*": ["libs/logger/src/*"],
      "@ocean.chat/settings": ["libs/settings/src"],
      "@ocean.chat/settings/*": ["libs/settings/src/*"]
    }
  }
}
